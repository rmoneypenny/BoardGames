
<%= render partial: "nameList", locals: {:pathname => players_seven_wonders_path} %>
<% chance = 10 %>

<br>
<br>

<% if @names && @names.size > 1 && @names.size <9 %>
	<%= form_tag(review_seven_wonders_path, method: "post") do %>
		<% @names.each do |name|%>
			<%= label_tag("Name: ") %>
			<%= text_field_tag("name[]", name, readonly: true) %>
			<br>
			<% if rand(100) < chance %>
				<%= label_tag("Boardname: ") %>
				<%= select_tag("boardname[]", options_for_select(@seven_wonder.allboards)) %>
			<% else %>
				<%= label_tag("Boardname: ") %>
				<%= text_field_tag("boardname[]", @seven_wonder.playerboards(name), readonly: true) %>
			<% end %>
			<br>
			<%= label_tag("Score: ") %>
			<%= text_field_tag("score[]") %>
			<br>
			<br>
		<% end %>	
		<%= submit_tag("Submit", :name => 'submit') %>	
	<% end %>
	<br>	
<% elsif @names %>
	<%= "2-8 players needed" %>
<% end %>
<br>
<br>
<%= link_to "Back", boardgame_index_path(:game => "SevenWonders") %>
