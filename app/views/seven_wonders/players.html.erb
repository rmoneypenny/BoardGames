
<% args = (@all? @player_names.getnames : @seven_wonder.getnames) %>
<br> 
Please select players
<%= form_tag players_seven_wonders_path do %>
<br>
	<% args.each do |name| %>
		<%= check_box_tag("names[]", name) %>
		<%= label_tag(name) %>
		<br>
	<% end %>
	<%= check_box_tag("all", "allUsers") %>
	<%= label_tag("All Players") %>
	<br>
	<%= submit_tag "Confirm" %>
<% end %>

<br>
<br>


<% if @names %>
	<%= form_tag(review_seven_wonders_path, method: "post") do %>
		<% @names.each do |name|%>
			<%= label_tag("Name: ") %>
			<%= text_field_tag("name[]", name, readonly: true) %>
			<br>
			<%= label_tag("Boardname: ") %>
			<%= text_field_tag("boardname[]", @seven_wonder.playerboards(name), readonly: true) %>
			<br>
			<%= label_tag("Score: ") %>
			<%= text_field_tag("score[]") %>
			<br>
			<br>
		<% end %>	
		<%= submit_tag("Submit") %>	
	<% end %>
	<br>	
<% end %>
<br>
<br>
<%= link_to "Back", seven_wonders_path %>
