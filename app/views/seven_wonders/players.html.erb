<% if @names %>
	<%= form_tag(review_seven_wonders_path, method: "post") do %>
		<% @names.each do |name|%>
			<%= label_tag("selectedname[]", "Name: ") %>
			<%= text_field_tag("name[]", name, readonly: true) %>
			<br>
			<%= label_tag("boardname[]", "Boardname: ") %>
			<%= text_field_tag("boardname[]", @seven_wonder.playerboards(name), readonly: true) %>
			<br>
			<%= label_tag("score[]", "Score: ") %>
			<%= text_field_tag("score[]") %>
			<br>
			<br>
		<% end %>	
		<%= submit_tag("Submit") %>	
	<% end %>
	<br>	
<% end %>
